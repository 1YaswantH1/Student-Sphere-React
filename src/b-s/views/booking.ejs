            <li><a href="http://127.0.0.1:5500/react-student-sphere/src/html/login_signup.html">Logout</a></li>
        </ul> 
        <div class="hamburger">
            <div></div>
            <div></div>
            <div></div>
        </div>
    </nav>
    <div class="container">
    <h1>Book a Slot</h1>
    <form action="/api/bookings" method="POST">
        <div>
            <label for="item">Select Item:</label>
            <select name="itemId" id="item">
                <% items.forEach(item => { %>
                    <option value="<%= item._id %>"><%= item.name %></option>
                <% }); %>
            </select>
        </div>
        <div>
            <label for="timeSlot">Select Time Slot:</label>
            <input type="datetime-local" name="timeSlot" id="timeSlot" step="3600" required>
        </div>
        <div>
            <label for="quantity">Quantity:</label>
            <input type="number" name="quantity" id="quantity" min="1" max="1" required>
        </div>
        <button type="submit" id="bookslot">Book Slot</button>
        
    </form>
    <button><a href="http://localhost:5000/api/bookings">Back to Home</a></button>
    
</div>
</body>
</html>
